<div class="row">
  <div class="col-md-6">
    <h2>Create Store</h2>

    <form class="" action="/create_store" method="post">
      <label for="name">Store Name:</label>
      <input type="text" name="name">
      <button type="submit" name="create_store">Create Store</button>
    </form>
  </div>

  <div class="col-md-6">
    <h2>Stores:</h2>

    <ul>
      <% @stores.each do |store| %>
        <li><a href="/store/<%= store.id %>"><%= store.name %></a></li>
      <% end %>
    </ul>
  </div>
</div>
