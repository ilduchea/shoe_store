<div class="row">
  <div class="col-md-6">
    <h2>Create Shoe</h2>

    <form class="" action="/create_shoe" method="post">
      <label for="brand">Shoe Brand:</label>
      <input type="text" name="brand"><br>
      <label for="price">Price:</label>
      <input type="number" name="price" step=".01">
      <button type="submit" name="create_shoe">Create Shoe</button>
    </form>
  </div>
  <div class="col-md-6">
    <h3>Shoes</h3>
    <table>
      <tr>
        <th>Brand</th>
        <th>Price</th>
      </tr>
      <% @shoes.each do |shoe| %>
        <tr>
          <td><%= shoe.brand %></td>
          <td><%= shoe.price %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
